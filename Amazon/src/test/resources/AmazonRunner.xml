<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name = "Amazon TestSuit parallel">

    <parameter name="cloud" value="false"/>
    <parameter name="envName" value="saucelabs"/>
    <parameter name="browser" value="chrome"/>
    <parameter name="browserVersion" value="77.0"/>
    <parameter name="url" value="https://www.amazon.com/"/>
    <parameter name="platform" value="windows"/>


    <test name="Amazon automation test">

        <classes>
            <class name="com.amazon.logintest.LoginTest"></class>
            <class name="com.amazon.registrationtest.RegistrationTest"></class>
            <class name="com.amazon.addtocarttest.ProductSearchAndAddToCartTest"></class>
            <class name="com.amazon.searchtest.SearchTest"></class>
            <class name="com.amazon.optionselectiontest.OptionSelectionTest"></class>
            <class name="com.amazon.addtocarttest.ChangeQuantityFromAddToCartTest"></class>
            <class name="com.amazon.navigatebacktest.NavigateBackTest"></class>
            <class name="com.amazon.shopbydepartmenttest.ShopByDepartmentTest"></class>
            <class name="com.amazon.menuoptiontest.MenuOptionsTest"></class>
            <class name="com.amazon.logintest.LoginTest"></class>
        </classes>
    </test>
</suite>